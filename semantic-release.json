{
  "plugins": [
    "CommitAnalyzer",
    "ReleaseNotesGenerator",
    "Changelog",
    [
      "Git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): {NextRelease.Version} [skip ci]\n\n{NextRelease.Notes}"
      }
    ],
    [
      "Exec",
      {
        "preparePsScript": "create-dist.ps1 -NoProfile -ExecutionPolicy Bypass {DryRun} {NextRelease.Version} {NextRelease.Prerelease}",
        "publishPsScript": "publish-dist.ps1 -NoProfile -ExecutionPolicy Bypass {DryRun}"
      }
    ],
    "GitHub"
  ],
  "unifyTag": true
}
